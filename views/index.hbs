          }
          dayMatch = cardDate.getTime() === compareDate.getTime();
        }

        // mode match
        let modeMatch = true;
        if (selectedMode !== 'bau') {
          modeMatch = cardCampaign.includes(selectedMode);
        } else {
          modeMatch = !cardCampaign.includes('re-engagement') && !cardCampaign.includes('re-activation');
        }

        // search match
        let searchMatch = true;
        if (searchTerm) {
          searchMatch = cardBrand.includes(searchTerm) ||
                       cardCampaign.includes(searchTerm) ||
                       cardDomain.includes(searchTerm);
        }

        card.style.display = (dayMatch && modeMatch && searchMatch) ? 'block' : 'none';
      });

