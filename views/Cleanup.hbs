<div class="dashboard">


  <div class="flex" style="gap: 30px;">
    <!-- Lists Card -->
    <div class="card" style="width: 100%; max-width: 1200px; margin: 0 auto;">
      <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <div>
          <h2 style="margin: 0; ">üìãLists</h2>
        </div>
        <div style="display: inline-block; background: #1654a0; color: white; padding: 8px 16px; border-radius: 15px; font-size: 16px; font-weight: 600; box-shadow: 0 2px 4px rgba(87, 242, 135, 0.3);">
          <span id="listCount">0</span> Lists
