        <!-- Select All Checkbox -->
        <div style="margin-top: 10px; padding: 10px; background: #f8f9fa; border-radius: 5px; display: flex; align-items: center; gap: 8px;">
          <input type="checkbox" id="selectAllCheckbox" style="width: 18px; height: 18px; cursor: pointer;">
          <label for="selectAllCheckbox" style="cursor: pointer; font-weight: 500; margin: 0;">
            Select All (<span id="selectedCount">0</span> / <span id="filteredCount">0</span>)
          </label>
        </div>
      </div>

      <div id="listList" style="max-height: 400px; overflow-y: auto; margin-bottom: 20px; border: 1px solid #eee; border-radius: 5px; padding: 10px;">
        <div style="text-align: center; padding: 40px; color: #999;">
          No lists found
        </div>
      </div>

      <button id="deleteListsBtn" class="delete-btn" style="width: 100%; padding: 12px; background: #ED4245; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; font-weight: 500; display: flex; align-items: center; justify-content: center; gap: 8px;">
        <span>üóëÔ∏è</span>
        <span>Delete Selected Lists</span>
      </button>
    </div>
  </div>
</div>

<!-- Confirmation Modal -->
<div id="confirmModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
  <div style="background: white; padding: 30px; border-radius: 10px; max-width: 500px; width: 90%; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
    <h3 style="margin-top: 0; color: #ED4245;">‚ö†Ô∏è Confirm Deletion</h3>
    <p id="confirmMessage" style="margin: 20px 0; font-size: 16px;"></p>
    <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
      <button id="cancelBtn" style="padding: 10px 20px; background: #ccc; color: #333; border: none; border-radius: 5px; cursor: pointer; font-size: 14px; font-weight: 500;">
        Cancel
      </button>
      <button id="confirmBtn" style="padding: 10px 20px; background: #ED4245; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 14px; font-weight: 500;">
        Delete
      </button>
    </div>
  </div>
</div>

<style>
