  margin-left: auto;
  flex-shrink: 0;
  border: 1px solid #1654a0;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  let lists = [];
  let filteredLists = [];
  let deleteType = null;
  let selectedItems = [];

  // Fetch lists
  async function loadData() {
    try {
      // Fetch lists
      const listResponse = await fetch('/api/lists');
      if (listResponse.ok) {
        lists = await listResponse.json();
        filteredLists = lists;
        renderLists(filteredLists);
      }
    } catch (error) {
      console.error('Error loading data:', error);
    }
  }

  function renderLists(listsToRender) {
    const listList = document.getElementById('listList');
    const listCount = document.getElementById('listCount');
    const filteredCount = document.getElementById('filteredCount');

    listCount.textContent = listsToRender.length;
    if (filteredCount) {
      filteredCount.textContent = listsToRender.length;
    }

    if (listsToRender.length === 0) {
      listList.innerHTML = '<div style="text-align: center; padding: 40px; color: #999;">No lists found</div>';
      return;
    }

    listList.innerHTML = listsToRender.map(list => `
      <div class="list-item" data-id="${list.id}" data-name="${list.name || ''}" data-listid="${list.listId || ''}">
        <input type="checkbox" class="item-checkbox list-checkbox" data-id="${list.id}" data-listid="${list.listId || ''}">
        <div class="item-details" onclick="toggleListSelection(this)">
          <div class="item-title">${list.name || 'Unnamed List'}</div>
          <div class="item-meta">List ID: ${list.listId || 'N/A'} | Created: ${list.date || 'N/A'}</div>
        </div>
        <div class="list-size-badge">
          <i class="fas fa-users" style="font-size: 12px; margin-right: 4px;"></i>
          <span>${list.size || list.contactCount || 0}</span>
        </div>
      </div>
    `).join('');

    // Add checkbox change handlers
    document.querySelectorAll('.list-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        this.closest('.list-item').classList.toggle('selected', this.checked);
        updateSelectAllState();
      });
    });

    // Reset select all checkbox state
    updateSelectAllState();
  }

  // Update Select All checkbox state based on visible checkboxes
  function updateSelectAllState() {
    const selectAllCheckbox = document.getElementById('selectAllCheckbox');
    const visibleCheckboxes = document.querySelectorAll('.list-checkbox');
    const checkedCheckboxes = document.querySelectorAll('.list-checkbox:checked');
    const selectedCount = document.getElementById('selectedCount');

    // Update selected count display
    if (selectedCount) {
      selectedCount.textContent = checkedCheckboxes.length;
    }

    if (selectAllCheckbox && visibleCheckboxes.length > 0) {
      selectAllCheckbox.checked = visibleCheckboxes.length === checkedCheckboxes.length;
      selectAllCheckbox.indeterminate = checkedCheckboxes.length > 0 && checkedCheckboxes.length < visibleCheckboxes.length;
    }
  }

  // Select All functionality - only selects visible/filtered items
  function toggleSelectAll() {
    const selectAllCheckbox = document.getElementById('selectAllCheckbox');
    const visibleCheckboxes = document.querySelectorAll('.list-checkbox');

    visibleCheckboxes.forEach(checkbox => {
      checkbox.checked = selectAllCheckbox.checked;
      checkbox.closest('.list-item').classList.toggle('selected', checkbox.checked);
    });

    // Update the selected count display
    updateSelectAllState();
  }

  // Toggle selection function
  window.toggleListSelection = function(element) {
    const item = element.closest('.list-item');
    const checkbox = item.querySelector('.item-checkbox');
    checkbox.checked = !checkbox.checked;
    item.classList.toggle('selected', checkbox.checked);
    updateSelectAllState(); // Update the count when clicking the card
  };

  // Search functionality for lists
  document.getElementById('listSearch').addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    filterLists();
  });

  // Select All checkbox event listener
  document.getElementById('selectAllCheckbox').addEventListener('change', toggleSelectAll);

  function filterLists() {
    const searchTerm = document.getElementById('listSearch').value.toLowerCase().trim();

    if (!searchTerm) {
      filteredLists = lists;
      renderLists(filteredLists);
      return;
    }

    // Check if search term contains month names (indicating a date search)
    const monthNames = ['jan', 'feb', 'mar', 'apr', 'may', 'jun', 'jul', 'aug', 'sep', 'oct', 'nov', 'dec'];
    const isDateSearch = monthNames.some(month => searchTerm.includes(month));

    filteredLists = lists.filter(list => {
      if (!list.name) return false;

      const listName = list.name.toLowerCase();

      if (isDateSearch) {
        // Extract day number and month from search term
        // Handle formats: "8 nov", "08 nov", "8 nov 2025", "08 nov 2025"
        const dateMatch = searchTerm.match(/(\d{1,2})\s+(jan|feb|mar|apr|may|jun|jul|aug|sep|oct|nov|dec)/);

        if (!dateMatch) {
          // If no day number, just search for month and year
          return listName.includes(searchTerm);
        }

        const day = parseInt(dateMatch[1], 10); // Remove leading zeros by parsing as int
        const month = dateMatch[2];

        // Create patterns to match both "- 8 Nov" and "- 08 Nov"
        const patterns = [
          new RegExp('-\\s*' + day + '\\s+' + month, 'i'),
          new RegExp('-\\s*0?' + day + '\\s+' + month, 'i'),
          new RegExp('\\b' + day + '\\s+' + month, 'i'),
          new RegExp('\\b0' + day + '\\s+' + month, 'i')
        ];

        // Check if any pattern matches
        for (const pattern of patterns) {
          if (pattern.test(listName)) {
            // Make sure we're not matching "Tier X" by checking the context
            const match = listName.match(pattern);
            if (match) {
              const matchIndex = listName.indexOf(match[0]);
              const beforeMatch = listName.substring(Math.max(0, matchIndex - 10), matchIndex).toLowerCase();

              // Exclude if "tier" or "promo" appears right before the number
              if (beforeMatch.match(/tier\s*$/i) || beforeMatch.match(/promo\s*$/i)) {
                continue;
              }

              return true;
            }
          }
        }

        return false;
      } else {
        // For non-date searches, use word boundary regex
        const searchRegex = new RegExp('\\b' + searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + '\\b', 'i');
        return searchRegex.test(listName) || listName.includes(searchTerm);
      }
    });

    renderLists(filteredLists);
  }

  // Load list sizes button
  document.getElementById('loadListSizeBtn').addEventListener('click', async function() {
    const btn = this;
    const originalText = btn.innerHTML;

    // Get list IDs from currently filtered/visible lists
    const listIdsToFetch = filteredLists.map(list => list.listId).filter(id => id);

    if (listIdsToFetch.length === 0) {
      alert('No lists to load sizes for');
      return;
    }

    try {
      // Disable button and show loading state
      btn.disabled = true;
      btn.innerHTML = '<span>‚è≥</span><span>Loading sizes...</span>';

      // Fetch sizes from API
      const response = await fetch('/api/lists/sizes', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ listIds: listIdsToFetch })
      });

      const result = await response.json();

      if (response.ok && result.success) {
        // Update the lists array with fetched sizes
        lists.forEach(list => {
          if (result.sizes[list.listId] !== undefined) {
            list.size = result.sizes[list.listId];
          }
        });

        // Update filteredLists as well
        filteredLists.forEach(list => {
          if (result.sizes[list.listId] !== undefined) {
            list.size = result.sizes[list.listId];
          }
        });

        // Re-render to show updated sizes
        renderLists(filteredLists);

        // Show success message
        btn.innerHTML = '<span>‚úì</span><span>Sizes Loaded!</span>';
        setTimeout(() => {
          btn.innerHTML = originalText;
          btn.disabled = false;
        }, 2000);
      } else {
        alert(`Error loading sizes: ${result.message || 'Unknown error'}`);
        btn.innerHTML = originalText;
        btn.disabled = false;
      }
    } catch (error) {
      console.error('Error loading list sizes:', error);
      alert(`Error loading sizes: ${error.message}`);
      btn.innerHTML = originalText;
      btn.disabled = false;
    }
  });

  // Delete lists button
  document.getElementById('deleteListsBtn').addEventListener('click', function() {
    const selectedCheckboxes = document.querySelectorAll('.list-checkbox:checked');

    if (selectedCheckboxes.length === 0) {
      alert('Please select at least one list to delete');
      return;
    }

    selectedItems = Array.from(selectedCheckboxes).map(cb => cb.dataset.id);
    deleteType = 'lists';

    const message = `Are you sure you want to delete ${selectedItems.length} list(s)? This action cannot be undone.`;
    showConfirmModal(message);
  });

  // Confirmation modal
  function showConfirmModal(message) {
    const modal = document.getElementById('confirmModal');
    const confirmMessage = document.getElementById('confirmMessage');

    confirmMessage.textContent = message;
    modal.style.display = 'flex';
  }

  function hideConfirmModal() {
    const modal = document.getElementById('confirmModal');
    modal.style.display = 'none';
  }

  // Cancel button
  document.getElementById('cancelBtn').addEventListener('click', function() {
    hideConfirmModal();
    selectedItems = [];
    deleteType = null;
  });

  // Confirm delete button
  document.getElementById('confirmBtn').addEventListener('click', async function() {
    if (!deleteType || selectedItems.length === 0) {
      hideConfirmModal();
      return;
    }

    const confirmBtn = this;
    const originalText = confirmBtn.textContent;

    try {
      // Show loading state
      confirmBtn.textContent = 'Deleting...';
      confirmBtn.disabled = true;
      confirmBtn.style.opacity = '0.6';

      const endpoint = '/api/lists/delete';

      const response = await fetch(endpoint, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ ids: selectedItems })
      });

      const result = await response.json();

      if (response.ok) {
        hideConfirmModal();

        // Show success message
        const successMsg = `Successfully deleted ${result.deletedCount} list(s)`;
        alert(successMsg);

        // Reload data from server to ensure consistency
        await loadData();

        selectedItems = [];
        deleteType = null;
      } else {
        alert(`Error deleting lists: ${result.message || 'Unknown error'}`);
      }
    } catch (error) {
      console.error('Error deleting items:', error);
      alert(`Error deleting lists: ${error.message}`);
    } finally {
      // Reset button state
      confirmBtn.textContent = originalText;
      confirmBtn.disabled = false;
      confirmBtn.style.opacity = '1';
    }
  });

  // Close modal on background click
  document.getElementById('confirmModal').addEventListener('click', function(e) {
    if (e.target === this) {
      hideConfirmModal();
    }
  });

  // Load initial data
  loadData();
});
</script>
