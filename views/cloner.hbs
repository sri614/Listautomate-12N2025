  // Store emails globally for search functionality
  let allClonedEmails = [];

  // Search functionality
  function searchEmails() {
    const searchInput = document.getElementById('emailSearchInput');
    if (!searchInput) return;

    const searchTerm = searchInput.value.toLowerCase().trim();
    const emailsContainer = document.getElementById('clonedEmailsContainer');
    const searchResultsCount = document.getElementById('searchResultsCount');

    if (!emailsContainer) return;

    let filteredEmails = allClonedEmails;

    if (searchTerm) {
      // Check if search term contains month names (indicating a date search)
      const monthNames = ['jan', 'feb', 'mar', 'apr', 'may', 'jun', 'jul', 'aug', 'sep', 'oct', 'nov', 'dec', 'january', 'february', 'march', 'april', 'june', 'july', 'august', 'september', 'october', 'november', 'december'];
      const shortMonths = ['jan', 'feb', 'mar', 'apr', 'may', 'jun', 'jul', 'aug', 'sep', 'oct', 'nov', 'dec'];
      const isDateSearch = monthNames.some(month => searchTerm.includes(month));

      filteredEmails = allClonedEmails.filter(email => {
        const emailName = email.clonedEmailName.toLowerCase();
        const emailId = email.clonedEmailId.toString();
        const originalId = email.originalEmailId.toString();
        const scheduledDate = new Date(email.scheduledTime).toLocaleString().toLowerCase();

        if (isDateSearch) {
          // Extract day number and month from search term
          // Handle formats: "8 nov", "08 nov", "8 nov 2025", "08 nov 2025"
          const dateMatch = searchTerm.match(/(\d{1,2})\s+(jan|feb|mar|apr|may|jun|jul|aug|sep|oct|nov|dec|january|february|march|april|may|june|july|august|september|october|november|december)/i);

          if (!dateMatch) {
            // If no day number, just search for month and year in all fields
            return emailName.includes(searchTerm) ||
                   scheduledDate.includes(searchTerm);
          }

          const day = parseInt(dateMatch[1], 10); // Remove leading zeros by parsing as int
          const month = dateMatch[2].toLowerCase();

          // Create patterns to match both "- 8 Nov" and "- 08 Nov"
          const patterns = [
            new RegExp('-\\s*' + day + '\\s+' + month, 'i'),
            new RegExp('-\\s*0?' + day + '\\s+' + month, 'i'),
            new RegExp('\\b' + day + '\\s+' + month, 'i'),
            new RegExp('\\b0' + day + '\\s+' + month, 'i'),
            // Also match in date format like "11/8/2025" for the scheduledDate field
            new RegExp('\\b' + day + '[/\\-]', 'i')
          ];

          // Check if any pattern matches in email name
          for (const pattern of patterns) {
            const nameMatch = emailName.match(pattern);
            if (nameMatch) {
              const matchIndex = emailName.indexOf(nameMatch[0]);
              const beforeMatch = emailName.substring(Math.max(0, matchIndex - 10), matchIndex).toLowerCase();

              // Exclude if "tier" or "promo" appears right before the number
              if (beforeMatch.match(/tier\s*$/i) || beforeMatch.match(/promo\s*$/i)) {
                continue;
              }

              return true;
            }
          }

          // Check scheduled date field
          // For date fields, we need to check if the date matches
          // Format could be "11/8/2025, 11:00:00 AM" or similar
          if (scheduledDate.includes(month)) {
            // Check if the day matches in the scheduled date
            const scheduledDay = new Date(email.scheduledTime).getDate();
            if (scheduledDay === day) {
              return true;
            }
          }

          return false;
        } else {
          // For non-date searches, use word boundary regex with fallback
          const searchRegex = new RegExp('\\b' + searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&') + '\\b', 'i');
          return searchRegex.test(emailName) ||
                 searchRegex.test(emailId) ||
                 searchRegex.test(originalId) ||
                 searchRegex.test(scheduledDate) ||
                 // Fallback to includes for partial matching
                 emailName.includes(searchTerm) ||
                 emailId.includes(searchTerm) ||
                 originalId.includes(searchTerm);
        }
      });
    }

    // Update results count
    if (searchResultsCount) {
      searchResultsCount.textContent = searchTerm
        ? `Showing ${filteredEmails.length} of ${allClonedEmails.length} emails`
        : `Showing ${filteredEmails.length} cloned emails`;
    }

    // Update filtered email count
    const filteredEmailCount = document.getElementById('filteredEmailCount');
    if (filteredEmailCount) {
      filteredEmailCount.textContent = filteredEmails.length;
    }

    // Render filtered emails
    renderEmailsList(filteredEmails, emailsContainer);
  }

