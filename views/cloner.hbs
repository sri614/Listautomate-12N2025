  function toggleSelectAll() {
    const selectAllCheckbox = document.getElementById('selectAllCheckbox');
    // Only select visible/filtered checkboxes (those currently in the DOM)
    const visibleCheckboxes = document.querySelectorAll('.email-checkbox');

    visibleCheckboxes.forEach(checkbox => {
      checkbox.checked = selectAllCheckbox.checked;
    });

    updateSelectedCount();
  }

  function attachCheckboxListeners() {
    const checkboxes = document.querySelectorAll('.email-checkbox');
    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateSelectedCount);
    });
    updateSelectedCount();
  }

  function attachCardClickListeners() {
    const emailCards = document.querySelectorAll('.email-item');
    emailCards.forEach(card => {
      card.addEventListener('click', (e) => {
        // Don't toggle if clicking directly on the checkbox
        if (e.target.classList.contains('email-checkbox')) {
          return;
        }

        // Find the checkbox within this card
        const emailId = card.getAttribute('data-email-id');
        const checkbox = card.querySelector(`.email-checkbox[data-id="${emailId}"]`);

        if (checkbox) {
          checkbox.checked = !checkbox.checked;
          updateSelectedCount();
        }
      });
    });
  }

  // Bulk delete function
  async function deleteSelected() {
    const checkedBoxes = document.querySelectorAll('.email-checkbox:checked');
    const selectedIds = Array.from(checkedBoxes).map(cb => cb.getAttribute('data-id'));

    if (selectedIds.length === 0) {
      showDialog('Please select at least one email to delete', 'warning', 'No Selection');
      return;
    }

    showConfirm(
      `Are you sure you want to delete ${selectedIds.length} selected email(s) from both the database and HubSpot?`,
      async (confirmed) => {
        if (!confirmed) return;

        try {
          const deleteBtn = document.getElementById('deleteSelectedBtn');
          if (deleteBtn) {
            deleteBtn.disabled = true;
            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i> Deleting...';
          }

          log(`üóëÔ∏è Deleting ${selectedIds.length} selected emails...`, 'info');

          let successCount = 0;
          let errorCount = 0;
          let hubspotDeletedCount = 0;
          let hubspotErrorCount = 0;

          // Delete each email
          for (const emailId of selectedIds) {
            try {
              const response = await axios.delete(`/api/cloned-emails/${emailId}`);

              // Remove from global array
              allClonedEmails = allClonedEmails.filter(email => email._id !== emailId);

              successCount++;

              if (response.data.hubspotDeleted) {
                hubspotDeletedCount++;
              } else if (response.data.hubspotError) {
                hubspotErrorCount++;
              }
            } catch (error) {
              console.error('Delete error for email:', emailId, error);
              errorCount++;
            }
          }

          // Refresh the display
          searchEmails();

          // Show results
          if (successCount > 0) {
            if (hubspotDeletedCount > 0) {
              log(`‚úì Successfully deleted ${successCount} emails from database and ${hubspotDeletedCount} from HubSpot`, 'success');
            } else {
              log(`‚úì Successfully deleted ${successCount} emails from database`, 'success');
            }

            if (hubspotErrorCount > 0) {
              log(`‚ö†Ô∏è ${hubspotErrorCount} emails had HubSpot deletion errors`, 'warning');
            }
          }

          if (errorCount > 0) {
            log(`‚úó Failed to delete ${errorCount} emails`, 'error');
          }

          // Reset button
          if (deleteBtn) {
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = '<i class="fas fa-trash mr-1"></i> Delete Selected (<span id="selectedCount">0</span>)';
          }

          // Reset select all checkbox
          const selectAllCheckbox = document.getElementById('selectAllCheckbox');
          if (selectAllCheckbox) {
            selectAllCheckbox.checked = false;
            selectAllCheckbox.indeterminate = false;
          }

        } catch (error) {
          console.error('Bulk delete error:', error);
          log('‚úó Error during bulk delete operation', 'error');

          const deleteBtn = document.getElementById('deleteSelectedBtn');
          if (deleteBtn) {
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = '<i class="fas fa-trash mr-1"></i> Delete Selected (<span id="selectedCount">0</span>)';
          }
        }
      },
      'Delete Confirmation'
    );
  }

